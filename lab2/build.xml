<project default="do">

    <presetdef name="javac">
        <javac includeantruntime="false" />
    </presetdef>

    <property name="build.dir" value="build"/>
    <property name="classes.dir" value="${build.dir}/classes"/>
    <property name="tests.dir" value="${build.dir}/tests"/>
    <property name="junit.dir" value="junit"/>
    <property name="log.dir" value="log4j"/>
    <property name="src.dir" value="src"/>
    <property name="srctest.dir" value="test"/>

    <path id="classpath">
        <fileset dir="${log.dir}" includes="log4j-1.2.17.jar"/>
    </path>

    <target name="do">
        <delete dir="${build.dir}"/>
        <delete file="Factory.jar"/>
        <mkdir dir="${classes.dir}"/>
        <mkdir dir="${tests.dir}"/>
        <javac srcdir="${src.dir}" classpathref="classpath" includeantruntime="false" destdir="${classes.dir}"/>
        <javac srcdir="${srctest.dir}" classpath="{junit.dir}/junit-4.12.jar:${classes.dir}" destdir="${tests.dir}"/>
        <jar destfile="Factory.jar" basedir="${classes.dir}">
            <zipgroupfileset dir="${log.dir}" includes="*.jar" />
            <manifest>
                <attribute name="Main-Class" value="ru.nsu.ccfit.pleshkov.lab2.factory.Main"/>
            </manifest>
        </jar>

    </target>

    <path id="classpath.test">
        <pathelement location="${junit.dir}/junit-4.12.jar"/>
        <pathelement location="${junit.dir}/hamcrest-core-1.3.jar"/>
        <pathelement location="${classes.dir}"/>
    </path>

    <target name="test" >
        <junit printsummary="on" haltonfailure="yes" fork="true">
            <classpath>
                <path refid="classpath.test"/>
                <pathelement location="${tests.dir}"/>
            </classpath>
            <batchtest>
                <fileset dir="${srctest.dir}" includes="**/*Test.java" />
            </batchtest>
        </junit>
    </target>


</project>